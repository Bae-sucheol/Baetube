<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.channel.ChannelVideoFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/fragment_channel_video_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_scrollFlags="scroll|enterAlways"
            style="@style/top_menu_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/top_menu_text_style"
                android:text="test"
                android:background="@drawable/textview_rounded_rectangle_more"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/top_menu_text_style"
                android:text="test"
                android:background="@drawable/textview_rounded_rectangle_more"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/top_menu_text_style"
                android:text="test"
                android:background="@drawable/textview_rounded_rectangle_more"/>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_channel_video_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scroll_behavior" />



</androidx.coordinatorlayout.widget.CoordinatorLayout>