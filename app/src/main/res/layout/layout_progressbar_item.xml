<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_progressbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_xsmall">

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminateTint="@color/gray"
        android:progressDrawable="@drawable/progressbar_selected_false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_progress_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="컴퓨터 공학과 오지마세요."
            style="@style/textview_style_progressbar_option"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/margin_xsmall"
            android:layout_weight="2"
            android:gravity="right">

            <TextView
                android:id="@+id/textview_progress_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1000개"
                style="@style/textview_style_progressbar_info"/>

            <TextView
                android:id="@+id/textview_progress_percentage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="(50%)"
                style="@style/textview_style_progressbar_info"/>

        </LinearLayout>

    </LinearLayout>





</FrameLayout>