<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.modify.ModifyThumbnailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/fragment_modify_thumbnail_appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_no_scroll" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_modify_thumbnail_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/dark_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_modify_thumbnail_appbar"
        app:layout_constraintDimensionRatio="@string/res_ratio_full"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="1.0">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guild_inner_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/margin_medium"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guild_inner_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/margin_medium"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/top_menu_background"
            app:layout_constraintStart_toEndOf="@id/guild_inner_left"
            app:layout_constraintEnd_toStartOf="@id/guild_inner_right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="@string/res_ratio_wide"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_percent="1.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/margin_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_modify_thumbnail_layout"
        app:layout_constraintDimensionRatio="@string/res_ratio_wide"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_percent="1.0">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guild_inner_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guild_inner_center"
            app:layout_constraintDimensionRatio="@string/res_ratio_wide"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_percent="1.0">

            <ImageView
                android:id="@+id/fragment_modify_thumbnail_image_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_medium"
                android:background="@color/top_menu_background"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/guild_inner_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="@string/res_ratio_wide"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_percent="1.0">

            <ImageView
                android:id="@+id/fragment_modify_thumbnail_image_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_medium"
                android:background="@color/top_menu_background"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guild_inner_center"
            app:layout_constraintDimensionRatio="@string/res_ratio_wide"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_percent="1.0">

            <ImageView
                android:id="@+id/fragment_modify_thumbnail_image_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_medium"
                android:background="@color/top_menu_background"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guild_inner_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="@string/res_ratio_wide"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_percent="1.0">

            <ImageView
                android:id="@+id/fragment_modify_thumbnail_image_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_medium"
                android:background="@color/top_menu_background"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>