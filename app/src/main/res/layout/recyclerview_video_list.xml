<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_xsmall"
    android:paddingVertical="@dimen/margin_xsmall">

    <ImageView
        android:id="@+id/recyclerview_video_list_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.baetube.CustomVideoView
        android:id="@+id/recyclerview_video_list_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</FrameLayout>