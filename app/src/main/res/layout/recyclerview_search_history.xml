<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerview_search_history_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/padding_medium"
    android:paddingVertical="@dimen/padding_small">

    <ImageView
        android:id="@+id/recyclerview_search_history_image_icon"
        android:layout_width="@dimen/size_icon_small"
        android:layout_height="@dimen/size_icon_small"
        android:background="@drawable/ic_baseline_history_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/recyclerview_search_history_image_write"
        android:layout_width="@dimen/size_icon_small"
        android:layout_height="@dimen/size_icon_small"
        android:background="@drawable/ic_baseline_arrow_outward_24"
        android:rotation="270"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/recyclerview_search_history_text_keywords"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@+id/recyclerview_search_history_image_icon"
        app:layout_constraintEnd_toStartOf="@+id/recyclerview_search_history_image_write"
        app:layout_constraintTop_toTopOf="@+id/recyclerview_search_history_image_icon"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerview_search_history_image_icon"/>



</androidx.constraintlayout.widget.ConstraintLayout>