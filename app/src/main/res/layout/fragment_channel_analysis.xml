<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.Channel.ChannelAnalysisFragment">

    <include
        layout="@layout/toolbar_no_scroll"
        android:id="@id/toolbar"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fragment_channel_analysis_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fragment_channel_analysis_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@drawable/tab_layout_dot"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"/>


</LinearLayout>