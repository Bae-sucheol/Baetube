<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/icon_size_medium"
    android:layout_marginTop="@dimen/margin_small">

    <LinearLayout
        android:id="@+id/recyclerview_subscribe_hide_layout"
        android:layout_width="@dimen/subscribe_slide_distance"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/red"
        android:layout_gravity="right">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/unsubscribe"
            style="@style/textview_style_normal"
            android:padding="@dimen/padding_none"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recyclerview_subscribe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recyclerview_subscribe_profile"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:background="@drawable/ic_baseline_account_circle_24"/>

        <TextView
            android:id="@+id/recyclerview_subscribe_channel_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingRight="@dimen/padding_medium"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageView
                android:id="@+id/recyclerview_subscribe_notification"
                android:layout_width="@dimen/icon_size_small"
                android:layout_height="@dimen/icon_size_small"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_notifications_none_24" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>