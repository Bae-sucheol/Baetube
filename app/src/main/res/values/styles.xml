<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="textview_style_normal">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingVertical">@dimen/text_padding</item>
        <item name="android:paddingHorizontal">@dimen/top_menu_padding_horizontal</item>
        <item name="android:layout_marginVertical">@dimen/text_margin</item>
    </style>

    <style name="textview_style_small">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingVertical">@dimen/text_padding</item>
        <item name="android:paddingHorizontal">@dimen/top_menu_padding_horizontal</item>
        <item name="android:layout_marginVertical">@dimen/text_margin</item>
    </style>

    <style name="textview_style_video_title">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="textview_style_video_description">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="top_menu_style">
        <item name="android:paddingLeft">@dimen/top_menu_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/top_menu_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/top_menu_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/top_menu_padding_vertical</item>
    </style>

    <style name="clickable_text_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/clickable_text_color</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    
</resources>