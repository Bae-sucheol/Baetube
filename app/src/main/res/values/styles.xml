<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="textview_style_normal">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/text_padding</item>
        <item name="android:paddingBottom">@dimen/text_padding</item>
        <item name="android:paddingLeft">@dimen/top_menu_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/top_menu_padding_horizontal</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>

    </style>

    <style name="top_menu_style">
        <item name="android:paddingLeft">@dimen/top_menu_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/top_menu_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/top_menu_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/top_menu_padding_vertical</item>
    </style>

    <style name="clickable_text_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/clickable_text_color</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>
    
</resources>